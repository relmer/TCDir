{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug x64",
            "type": "process",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}\\Build.ps1",
                "-Configuration",
                "Debug",
                "-Platform",
                "x64",
                "-Target",
                "Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
